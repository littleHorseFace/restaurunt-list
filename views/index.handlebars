<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
      <form action="/search" class="d-flex justify-content-between">
        <div class="input-group" style="width: 500px;">
          <input type="text" name="findEat" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
            aria-expanded="false" style="width: 100px ;">
            排序
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">A-Z</a></li>
            <li><a class="dropdown-item" href="#">Z-A</a></li>
            <li><a class="dropdown-item" href="#">評分排行</a></li>
          </ul>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-center mt-2">
    <a href="/restaurants/add-new" class="btn">add new restaurunt</a>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns row">
        {{#each restaurantList}}
        {{!-- <a href="/restaurants/{{this._id}}" class="text-secondary col-sm-4"> --}}
          <div class="col-sm-4 d-flex flex-column justify-content-between"
            style="margin-bottom : 40px ; height : 50vh;">
            <div class="card mb-3" style="height: 78%;">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" style="height: 60%;">
              <div class="card-body p-3" style="height: 40%;">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
            </div>
            <div style="height: 20%;">
              <a href="/restaurants/{{this._id}}" class="text-secondary col-sm-4 btn">detail</a>
              <a href="/restaurants/{{this._id}}/adit" class="btn">edit</a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" class="d-inline" method="POST">
                <button type="submit" class="btn btn-danger">delete</button>
              </form>
            </div>

          </div>


          {{/each}}
      </div>
    </div>
  </div>
</div>